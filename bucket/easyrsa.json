{
    "version": "3.0.9",
    "description": "A CLI utility to build and manage a PKI CA",
    "homepage": "https://openvpn.net/easyrsa.html",
    "license": "GPL-2.0-only",
    "architecture": {
        "64bit": {
            "url": "https://github.com/OpenVPN/easy-rsa/releases/download/v3.0.9/EasyRSA-v3.0.9-win64.zip",
            "hash": "e182a5bcfb037227ff1ae3bfb67e1e4dabda2d7efd5e00c0ff7479ee80b6d61c"
        },
        "32bit": {
            "url": "https://github.com/OpenVPN/easy-rsa/releases/download/v3.0.9/EasyRSA-v3.0.9-win32.zip",
            "hash": "60855d10908914b6dc85d72d4b6fb7e3c8f8918e6644753c2a85ca0c43eabc2f"
        }
    },
    "extract_dir": "EasyRSA-3.0.9",
    "post_install": [
        "@\"",
        "setup_path=\"$($dir -replace '\\\\', '/')\"",
        "export EASYRSA=\"`${setup_path}\"",
        "export EASYRSA_PKI=\"`${setup_path}/keys/pki\"",
        "export PATH=\"`${setup_path};`${setup_path}/bin;`${PATH}\"",
        "export HOME=\"`${setup_path}\"",
        "export ENV=\"/disable-env\"",
        "`${setup_path}/easyrsa $*",
        "\"@ | Out-File \"$dir\\easyrsa-wrapper.sh\" -Encoding Ascii",
        "if (!(Test-Path \"$dir\\keys\\pki\")) { easyrsa init-pki }"
    ],
    "bin": [
        [
            "bin\\sh.exe",
            "easyrsa",
            "$dir\\easyrsa-wrapper.sh"
        ]
    ],
    "persist": "keys",
    "checkver": {
        "github": "https://github.com/OpenVPN/easy-rsa"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/OpenVPN/easy-rsa/releases/download/v$version/EasyRSA-v$version-win64.zip"
            },
            "32bit": {
                "url": "https://github.com/OpenVPN/easy-rsa/releases/download/v$version/EasyRSA-v$version-win32.zip"
            }
        },
        "extract_dir": "EasyRSA-$version"
    }
}
